{% extends 'base.html.twig' %}

{% block title %}Nueva Categoría{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<div class="bg-white rounded-lg shadow-lg overflow-hidden relative">
			<div class="px-4 py-8">

				<div class="mb-2">
					<h1 class="text-2xl font-bold text-gray-800">
						<i class="fas fa-film"></i> Nueva Categoría
					</h1>
				</div>

				{{ form_start(form) }} {# Abrimos la etiqueta del formulario enviando el formulario #}

				{{ form_widget(form) }} {# Pintamos el formulario #}
				
				<div class="mt-4">
					<button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
						<i class="fas fa-save"></i> Guardar
					</button>
					<a href="{{ path('app_categorias') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-3 px-4 rounded"
>
						<i class="fas fa-arrow-left"></i> Atrás
					</a>
				</div>

				{{ form_end(form) }} {# Finalizamos la etiqueta del formulario pasando el formulario #}
			</div>
        </div>
    </div>
{% endblock %}